<Window x:Class="OrganizerWpf.StylizedControls.SCMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrganizerWpf.StylizedControls"
        xmlns:c="clr-namespace:OrganizerWpf.StylizedControls.Controls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="{Binding MsgIcon.Source}"
        Title="{Binding Caption}"
        Style="{DynamicResource WindowTemplateStyle}" SizeToContent="Height" Width="450">

    <StackPanel VerticalAlignment="Top" Height="auto">
        <TextBlock Style="{DynamicResource Text_Sub}" Text="{Binding Text}" TextWrapping="Wrap" Margin="15,15,15,5" VerticalAlignment="Top"/>
        <StackPanel x:Name="buttonsContainer" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,15,0">

        </StackPanel>
    </StackPanel>
</Window>
