<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:OrganizerWpf.UserControls.DocumentsExplorer"
                    >

    <Style TargetType="Image" x:Key="Icon">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="1" />
    </Style>
    <Style TargetType="TextBlock" x:Key="NameBox">
        <Setter Property="Margin" Value="3,1,0,0" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Grid.Column" Value="1" />
    </Style>
    <Style TargetType="Grid" x:Key="GridStyle">
        <Setter Property="Height" Value="20" />
    </Style>

    <s:IconTemplateSelector x:Key="IconTemplateSelector">        
        <s:IconTemplateSelector.DefaultTemplate>
            <DataTemplate>
                <Grid Style="{StaticResource GridStyle}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Style="{StaticResource Icon}" Source="../../Icons/FileExtensions/unknown.png"/>
                    <TextBlock Text="{Binding DocName}" Style="{StaticResource NameBox}"></TextBlock>
                </Grid>
            </DataTemplate>
        </s:IconTemplateSelector.DefaultTemplate>
